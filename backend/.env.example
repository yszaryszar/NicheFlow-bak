# 应用配置
APP_ENV=development # 环境：development/production
APP_MODE=development
APP_PORT=8080

# 数据库配置
DB_HOST=localhost
DB_PORT=5432
DB_NAME=niche_flow
DB_USER=yszar
DB_PASSWORD=password
DB_SSL_MODE=require # 开发环境使用 SSL，生产环境使用 disable
DB_SSL_TUNNEL=true # 开发环境使用 SSL 隧道，生产环境设为 false

# Redis配置
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_SSL_TUNNEL=true # 开发环境使用 SSL 隧道，生产环境设为 false
REDIS_TLS_ENABLE=true # 启用 TLS
REDIS_TLS_INSECURE_SKIP_VERIFY=false # 是否跳过证书验证
REDIS_TLS_CERT_FILE=certs/redis/client.crt # 客户端证书路径
REDIS_TLS_KEY_FILE=certs/redis/client.key # 客户端私钥路径
REDIS_TLS_CA_FILE=certs/redis/ca.crt # CA 证书路径

# JWT配置
JWT_SECRET=your_jwt_secret
JWT_EXPIRE=24h

# OpenAI配置
OPENAI_API_KEY=your_openai_api_key
OPENAI_ORG_ID=your_openai_org_id

# Anthropic配置
ANTHROPIC_API_KEY=your_anthropic_api_key

# CORS配置
CORS_ALLOWED_ORIGINS=http://localhost:3000
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Authorization,Content-Type
CORS_ALLOW_CREDENTIALS=true
CORS_MAX_AGE=300

# OAuth 配置
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret 